{
  "name": "Conky",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Word of the Day",
  "icons": {"conky": "conky.gif"},
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
	},

  "background": {"scripts": ["background.js"]},
   
  "web_accessible_resources":["conky.gif"],

  "permissions": [
    "notifications",
    "tabs"
  ],
  
  "content_scripts":[
	{
		"matches": ["http://*/*"],
		"js": ["popup.js"]
	}
  ]
}